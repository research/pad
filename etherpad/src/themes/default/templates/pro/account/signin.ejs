<% helpers.includeJs("pro/signin-client.js") %>
<% helpers.includeCss("pro/account.css") %>
<% helpers.setHtmlTitle(appjet.config.customBrandingName +": Sign In") %>


<div class="fpcontent">
  <div class="account-container">

  <%= signinNotice() %>

  <form id="signin-form" action="<%= request.path + '?' + request.query %>" method="post">
  <input type="hidden" name="assertion" value="" /> 
  <div class="bb bb-signin">
    <div class="bb-top">
      <div class="bb-topleft"><!-- --></div>
      <div class="bb-topright"><!-- --></div>
      <div class="bb-title">Sign In to <%= siteName %> <%= appjet.config.customBrandingName %></div>
    </div>
    <div class="bb-in">
      <%= errorDiv() %>
      <div>
        <%= helpers.clearFloats() %>
      </div>

      <div>
        <div id="welcome-browserid" class='one-time-alert' style="display: none">
          <h3>Signin with Persona</h3>
          <p>We've upgraded how you login.<br /><strong>Say buh bye to passwords</strong> and use
             Persona across the web.</p>
<p>Use the <strong>same email address</strong> you've always <strong>used on this site</strong>.</p>
          <p>Thanks,<br />
             Etherpad team</p>
        </div>
        <%= helpers.clearFloats() %>
      </div>

      <div>
        <button type="submit" class="bluebutton bluebutton120" id="signInButton">
          Sign In
        </button>
        <%= helpers.clearFloats() %>
      </div>

    </div>
  </div>
  </form>

  <div id="bottom-text">
      <a
      href="/ep/account/request-account">Request new account</a>
  </div>

  </div>
</div>

<script src="https://login.persona.org/include.js"></script>
